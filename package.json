{
  "name": "@kmariappan/strapi-type-generator",
  "author": "Karthikeyan Mariappan",
  "description": "Strapi Content type Generator ",
  "version": "1.0.1",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "typings": "dist/index.d.ts",
  "license": "MIT",
  "engines": {
    "node": ">=14"
  },
  "files": [
    "dist",
    "src"
  ],
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "npm run clean && rollup -c",
    "dev": "nodemon --config nodemon.json src/example/play.ts",
    "clean": "rm -rf dist",
    "lint": "eslint  . --ext .ts",
    "prettier-format": "prettier --config .prettierrc 'src/**/*.ts' --write",
    "commit": "git-cz"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run prettier-format && npm run lint"
    }
  },
  "devDependencies": {
    "@types/node": "^17.0.32",
    "@typescript-eslint/eslint-plugin": "^5.12.1",
    "@typescript-eslint/parser": "^5.12.1",
    "ansi-regex": "^6.0.1",
    "cz-conventional-changelog": "^3.3.0",
    "esbuild": "^0.14.23",
    "eslint": "^8.9.0",
    "eslint-config-prettier": "^8.4.0",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": "^7.0.4",
    "nodemon": "^2.0.12",
    "prettier": "^2.5.1",
    "rimraf": "^3.0.2",
    "rollup": "^2.68.0",
    "rollup-plugin-dts": "^4.1.0",
    "rollup-plugin-esbuild": "^4.8.2",
    "ts-node": "^10.2.1",
    "typescript": "^4.4.3"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "keywords": [
    "strapi",
    "strapi-types",
    "strapi-typescript"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/kmariappan/strapi-type-generator.git"
  }
}
